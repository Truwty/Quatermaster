{
  "name": "qm_website-app",
  "version": "1.0.2",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.qmwebsite.app",
    "productName": "QM Website App",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Truwty",
        "repo": "Quatermaster"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "images/LOGO.jpg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "QM Website App",
      "uninstallDisplayName": "Uninstall QM Website App"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/Truwty/Quatermaster.git"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  }
